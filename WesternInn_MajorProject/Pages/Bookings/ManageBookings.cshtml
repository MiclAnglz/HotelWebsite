@page
@model WesternInn_MajorProject.Pages.Bookings.ManageBookingsModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<p><h1>Manage Bookings</h1></p>


<form method="get">
  <div class="form-group row">
    <div class="col-sm-4 p-2" id="bID">
      <input asp-for="SearchString.BookingId" class="form-control" id="bid" placeholder="Enter Booking ID">
    </div>
  </div>
  <div class="form-group row" id="fName">
      <div class="col-sm-4 p-2">
        <input asp-for="SearchString.GivenName" class="form-control" id="fname" placeholder="Enter First name">     
      </div>
  </div>
  <div class="form-group row" id="sName">
    <div class="col-sm-4 p-2">
      <input asp-for="SearchString.Surname" class="form-control" id="sname" placeholder="Enter Surname">
    </div>
  </div>
  <fieldset class="form-group">
    <div class="row">
      <legend class="col-form-label col-sm-2 pt-0">Search By</legend>
      <div class="col-sm-10">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
          <label class="form-check-label" for="gridRadios1">
            Name
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
          <label class="form-check-label" for="gridRadios2">
            Booking ID
          </label>
        </div>       
      </div>
    </div>
  </fieldset>
  <div class="form-group row">
    <div class="col-sm-10 p-2">
      <input type="submit" value="Search" id="sub" class="btn btn-primary" />
    </div>
  </div>
</form>
<p>
    <a asp-page="Creator">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].theRoom.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].theGuest.GivenName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].theGuest.Surname)
            </th>
            <th>
                <a asp-page="/Bookings/ManageBookings" asp-route-sortorder="@ViewBag.NextCheckInBooking">
                    @Html.DisplayNameFor(model => model.Booking[0].CheckIn)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].CheckOut)
            </th>
            <th>
                <a asp-page="/Bookings/ManageBookings" asp-route-sortorder="@ViewBag.NextCostBooking">
                    @Html.DisplayNameFor(model => model.Booking[0].Cost)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Booking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.theRoom.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.theGuest.GivenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.theGuest.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                
                <a asp-page="./Edit" asp-route-bid="@item.ID" class="btn btn-secondary" role="button" aria-pressed="true">Edit</a> 
                <a asp-page="./Delete" asp-route-bid="@item.ID" class="btn btn-danger" role="button" aria-pressed="true">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


         